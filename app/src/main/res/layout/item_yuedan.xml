<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_list_item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@mipmap/ic_splash" />

        <ImageView
            android:id="@+id/iv_list_item_author"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_camera_24" />

        <TextView
            android:id="@+id/tv_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_list_item_author"
            android:maxLines="1"
            android:text="歌单"
            android:textColor="#00FF00"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_list_item_title"
            android:layout_toRightOf="@id/iv_list_item_author"
            android:maxLines="1"
            android:text="作者"
            android:textColor="#fff"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tv_list_item_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_list_item_name"
            android:layout_toRightOf="@id/iv_list_item_author"
            android:maxLines="1"
            android:text="歌单名称"
            android:textColor="#fff"
            android:textSize="25sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>